{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "ES2022",
    "rootDir": "./app",
    "strict": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
